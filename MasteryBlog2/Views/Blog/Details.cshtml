@model MasteryBlog2.Model.Blog
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
        <p>img src=@Model.Image</p>
    
        <p>Author: <span>@Model.Reviewer</span></p>
        <p class="genreGo">Genre: <a href="/Category/Index/">@Model.Category.Genre</a></p>
        <p>Blog: <span>@Model.Body</span></p>
        <p>Publish Date: <span>@Model.DateTime</span></p>

        @foreach (var tag in Model.TagBlogs)
        {
            <p class="tagGo">Tags: <a href="/Tag/Index/@tag.Tags.Id">@tag.Tags.Content</a></p>

        }

        <p class="indexGo"><a href="/Blog/Index/">Index</a></p>
        <hr />
    </div>
</body>
</html>
