@model IEnumerable<MasteryBlog2.Model.Blog>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Blogs By Tags</title>
    <link rel="stylesheet" href="~/Styles/Style.css" />


</head>
<body>
    <div>

        @foreach (var blog in Model)
        {
            <p><img src=@blog.Image></p>
            <p><span>@blog.Title</span></p>
            <p>Reviewer: <span>@blog.Reviewer</span></p>
            <p>Blog: <span>@blog.Body</span></p>
            <p>Publish Date: <span>@blog.DateTime</span></p>
            @*<p class="tagGo">Tags: <a href="/Tag/Index/@blog.Tag.ID">@blog.BlogTags.First().</a></p>*@

        }

        <hr />
    </div>

    <nav>
        <a href="/Blog/Index">HomePage</a>
        <a href="/Category/index">Category</a>
        <a href="/Tag/Index">Tags</a>
        <a href="/Blog/Create">Create a BLOG!!!</a>

    </nav>
    <footer>
        &copy; 2019 Book Bro's Blog
    </footer>
</body>

</html>
